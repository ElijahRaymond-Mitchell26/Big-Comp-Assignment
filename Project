import time


from adafruit_circuitplayground import cp


while True:
    if cp.switch:
        cp.pixels[0] = (0,25,0)
        cp.pixels[1] = (0,25,0)
        cp.pixels[2] = (0,25,0)
        cp.pixels[3] = (0,25,0)
        cp.pixels[4] = (0,25,0)
        cp.pixels[5] = (0,0,0)
        cp.pixels[6] = (0,0,0)
        cp.pixels[7] = (0,0,0)
        cp.pixels[8] = (0,0,0)
        cp.pixels[9] = (0,0,0)
    else:
        cp.pixels[5] = (0,25,0)
        cp.pixels[6] = (0,25,0)
        cp.pixels[7] = (0,25,0)
        cp.pixels[8] = (0,25,0)
        cp.pixels[9] = (0,25,0)
        cp.pixels[0] = (0,0,0)
        cp.pixels[1] = (0,0,0)
        cp.pixels[2] = (0,0,0)
        cp.pixels[3] = (0,0,0)
        cp.pixels[4] = (0,0,0)




import time


from adafruit_circuitplayground import cp


while True:
    x, y, z = cp.acceleration
    if x > 5:
        cp.pixels[0] = (0,0,25)
        cp.pixels[1] = (0,0,25)
        cp.pixels[2] = (0,0,25)
        cp.pixels[3] = (0,0,25)
        cp.pixels[4] = (0,0,25)
        cp.pixels[5] = (0,0,0)
        cp.pixels[6] = (0,0,0)
        cp.pixels[7] = (0,0,0)
        cp.pixels[8] = (0,0,0)
        cp.pixels[9] = (0,0,0)
    if x < -5:
        cp.pixels[5] = (0,0,25)
        cp.pixels[6] = (0,0,25)
        cp.pixels[7] = (0,0,25)
        cp.pixels[8] = (0,0,25)
        cp.pixels[9] = (0,0,25)
        cp.pixels[0] = (0,0,0)
        cp.pixels[1] = (0,0,0)
        cp.pixels[2] = (0,0,0)
        cp.pixels[3] = (0,0,0)
        cp.pixels[4] = (0,0,0)
    else:
        cp.pixels.fill((0,0,0))



import time
import random

from adafruit_circuitplayground import cp


while True:
    temp_c = cp.temperature
    if temp_c < 20:
        cp.pixels.fill((0, 0, 255))
    elif temp_c > 32:
        cp.pixels.fill((255,0,0))
    else:
        cp.pixels.fill((0,255,0))




import time
import random

from adafruit_circuitplayground import cp


while True:
    cp.pixels[0] = (25,0,0)
    cp.pixels[1] = (25,0,0)
    cp.pixels[2] = (25,0,0)
    cp.pixels[3] = (25,0,0)
    cp.pixels[4] = (25,0,0)
    cp.pixels[5] = (0,0,0)
    cp.pixels[6] = (0,0,0)
    cp.pixels[7] = (0,0,0)
    cp.pixels[8] = (0,0,0)
    cp.pixels[9] = (0,0,0)
    cp.play_tone(900,.3)
    time.sleep(0.5)
    cp.pixels[5] = (0,0,25)
    cp.pixels[6] = (0,0,25)
    cp.pixels[7] = (0,0,25)
    cp.pixels[8] = (0,0,25)
    cp.pixels[9] = (0,0,25)
    cp.pixels[0] = (0,0,0)
    cp.pixels[1] = (0,0,0)
    cp.pixels[2] = (0,0,0)
    cp.pixels[3] = (0,0,0)
    cp.pixels[4] = (0,0,0)
    cp.play_tone(500,.3)
    time.sleep(0.5)
